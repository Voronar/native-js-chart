{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "client",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}